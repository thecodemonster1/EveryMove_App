<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#77BDA54E"
    tools:context=".logInActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="15dp">

        <TextView
            android:id="@+id/textview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:fontFamily="@font/lobster"
            android:layout_marginTop="51dp"
            android:textSize="36dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#009B85"/>

        <EditText
            android:id="@+id/signup_name"
            android:layout_width="300dp"
            android:layout_height="51dp"
            android:layout_below="@+id/textview1"
            android:layout_alignParentStart="true"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="51dp"
            android:background="@drawable/button_boarder"
            android:drawableLeft="@drawable/baseline_person_24"
            android:drawablePadding="8dp"
            android:fontFamily="@font/source"
            android:hint="Name"
            android:padding="8dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/signup_email"
            android:layout_width="300dp"
            android:layout_height="51dp"
            android:layout_below="@+id/signup_name"
            android:layout_alignParentStart="true"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/button_boarder"
            android:drawableLeft="@drawable/baseline_email_24"
            android:drawablePadding="8dp"
            android:fontFamily="@font/source"
            android:hint="Email"
            android:padding="8dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/signup_password"
            android:layout_width="300dp"
            android:layout_height="51dp"
            android:layout_below="@+id/signup_email"
            android:layout_alignParentStart="true"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/button_boarder"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:drawablePadding="8dp"
            android:fontFamily="@font/source"
            android:hint="Password"
            android:padding="8dp"
            android:textColor="@color/black" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="51dp"
            android:id="@+id/signup_dob"
            android:layout_below="@+id/signup_password"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/button_boarder"
            android:padding="8dp"
            android:hint="DOB"
            android:fontFamily="@font/source"
            android:drawableLeft="@drawable/baseline_email_24"
            android:drawablePadding="8dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/signup_height"
            android:layout_width="300dp"
            android:layout_height="51dp"
            android:layout_below="@+id/signup_dob"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/button_boarder"
            android:padding="8dp"
            android:hint="Height"
            android:fontFamily="@font/source"
            android:drawableLeft="@drawable/baseline_height_24"
            android:drawablePadding="8dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/signup_weight"
            android:layout_width="300dp"
            android:layout_height="51dp"
            android:layout_below="@+id/signup_height"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/button_boarder"
            android:padding="8dp"
            android:hint="Weight"
            android:fontFamily="@font/source"
            android:drawableLeft="@drawable/baseline_monitor_weight_24"
            android:drawablePadding="8dp"
            android:textColor="@color/black"/>

        <Button
            android:text="Sign Up"
            android:fontFamily="@font/roboto"
            android:id="@+id/sighnup_button"
            android:layout_width="130dp"
            android:layout_height="51dp"
            android:layout_below="@+id/signup_weight"
            android:layout_marginStart="120dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="13dp"
            android:textSize="15dp"
            app:cornerRadius="40dp"/>

        <TextView
            android:id="@+id/loginRedirectText"
            android:layout_width="300dp"
            android:layout_height="51dp"
            android:layout_below="@+id/sighnup_button"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="13dp"
            android:padding="8dp"
            android:text="Already an user? login"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>

</ScrollView>