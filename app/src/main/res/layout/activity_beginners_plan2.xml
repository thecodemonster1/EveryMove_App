<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#77BDA54E"
    tools:context=".RegActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="51dp"
            android:fontFamily="@font/lobster"
            android:text="Daily Data"
            android:textAlignment="center"
            android:textColor="#009B85"
            android:textSize="36dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/pushupCount"
            android:layout_width="175dp"
            android:layout_height="51dp"
            android:layout_below="@+id/textview1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="42dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="41dp"
            android:layout_marginEnd="214dp"
            android:background="@drawable/button_boarder"
            android:drawableLeft="@mipmap/pushup1_foreground"
            android:drawablePadding="0dp"
            android:fontFamily="@font/source"
            android:inputType="number|numberDecimal"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <!--        <Button-->
        <!--            android:text="Sign Up"-->
        <!--            android:fontFamily="@font/roboto"-->
        <!--            android:id="@+id/signup_button"-->
        <!--            android:layout_width="130dp"-->
        <!--            android:layout_height="51dp"-->
        <!--            android:layout_below="@+id/signup_weight"-->
        <!--            android:layout_marginStart="120dp"-->
        <!--            android:layout_marginLeft="30dp"-->
        <!--            android:layout_marginTop="13dp"-->
        <!--            android:textSize="15dp"-->
        <!--            app:cornerRadius="40dp"/>-->

        <EditText
            android:id="@+id/sideplankCount"
            android:layout_width="320dp"
            android:layout_height="51dp"
            android:layout_below="@+id/pushupCount"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="49dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="42dp"
            android:background="@drawable/button_boarder"
            android:drawableLeft="@mipmap/side_plank_foreground"
            android:drawablePadding="0dp"
            android:fontFamily="@font/source"
            android:hint="Side-Plank (30 Sec)"
            android:inputType="number|numberDecimal"
            android:padding="0dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/crunchesCount"
            android:layout_width="320dp"
            android:layout_height="51dp"
            android:layout_below="@+id/sideplankCount"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="47dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="44dp"
            android:background="@drawable/button_boarder"
            android:drawableLeft="@mipmap/crunches_foreground"
            android:drawablePadding="0dp"
            android:fontFamily="@font/source"
            android:hint="Crunches (5 Reps)"
            android:inputType="number|numberDecimal"
            android:padding="0dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/supermansCount"
            android:layout_width="320dp"
            android:layout_height="51dp"
            android:layout_below="@+id/crunchesCount"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="47dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="68dp"
            android:layout_marginEnd="44dp"
            android:background="@drawable/button_boarder"
            android:drawableLeft="@mipmap/supermans_foreground"
            android:drawablePadding="0dp"
            android:fontFamily="@font/source"
            android:hint="Supermans (5 Reps)"
            android:inputType="number|numberDecimal"
            android:padding="0dp"
            android:scaleType="fitStart"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/jumpingjackCount"
            android:layout_width="320dp"
            android:layout_height="51dp"
            android:layout_below="@+id/supermansCount"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="45dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="86dp"
            android:layout_marginEnd="46dp"
            android:background="@drawable/button_boarder"
            android:drawableLeft="@mipmap/jumping_jack_foreground"
            android:drawablePadding="0dp"
            android:fontFamily="@font/source"
            android:hint="Jumping jack (10 Reps)"
            android:inputType="numberDecimal"
            android:padding="0dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/runCount"
            android:layout_width="320dp"
            android:layout_height="51dp"
            android:layout_below="@+id/jumpingjackCount"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="46dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="45dp"
            android:background="@drawable/button_boarder"
            android:drawableLeft="@mipmap/running_foreground"
            android:drawablePadding="0dp"
            android:fontFamily="@font/source"
            android:hint="Run Distance (500 m)"
            android:inputType="numberDecimal"
            android:padding="0dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/runCount2"
            android:layout_width="320dp"
            android:layout_height="51dp"
            android:layout_below="@+id/runCount"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="47dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="71dp"
            android:layout_marginEnd="44dp"
            android:background="@drawable/button_boarder"
            android:drawableLeft="@mipmap/cross_crunches_foreground"
            android:drawablePadding="0dp"
            android:fontFamily="@font/source"
            android:hint="Cross-Body-Crunches(2 Reps)"
            android:inputType="numberDecimal"
            android:padding="0dp"
            android:textAlignment="textStart"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/buttonAdd_plan_A"
            android:layout_width="130dp"
            android:layout_height="51dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="136dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="972dp"
            android:text="Add"
            app:cornerRadius="40dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="157dp"
            android:layout_marginTop="118dp"
            android:text="Push-Ups (10 Reps)" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="266dp"
            android:layout_marginTop="147dp"
            android:text="10 Completed" />

        <Button
            android:id="@+id/increment1"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="200dp"
            android:layout_marginTop="141dp"
            android:background="#000E0E0E"
            android:foreground="@android:drawable/arrow_up_float" />

        <Button
            android:id="@+id/decrement1"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="200dp"
            android:layout_marginTop="169dp"
            android:background="#00020202"
            android:foreground="@android:drawable/arrow_down_float" />

    </RelativeLayout>

</ScrollView>
