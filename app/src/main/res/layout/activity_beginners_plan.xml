                <!--            app:cornerRadius="40dp"/>-->

                <EditText
                    android:id="@+id/Count6"
                    android:layout_width="320dp"
                    android:layout_height="51dp"
                    android:layout_below="@+id/Count5"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="47dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="44dp"
                    android:background="@drawable/button_boarder"
                    android:drawableLeft="@mipmap/running_foreground"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/source"
                    android:hint="Run Distance (500 m)"
                    android:inputType="numberDecimal"
                    android:padding="8dp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/Count7"
                    android:layout_width="320dp"
                    android:layout_height="51dp"
                    android:layout_below="@+id/Count6"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="47dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="44dp"
                    android:background="@drawable/button_boarder"
                    android:drawableLeft="@mipmap/cross_crunches_foreground"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/source"
                    android:hint="Cross-Body-Crunches(2 Reps)"
                    android:inputType="numberDecimal"
                    android:padding="8dp"
                    android:textAlignment="textStart"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/buttonAdd_plan_A"
                    android:layout_width="130dp"
                    android:layout_height="51dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="139dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="896dp"
                    android:text="Add"
                    app:cornerRadius="40dp" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="54dp"
                    android:layout_marginTop="116dp"
                    android:text="Push-Ups (10 Reps)" />

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="264dp"
                    android:layout_marginTop="146dp"
