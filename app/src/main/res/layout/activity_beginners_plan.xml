<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#77BDA54E"
    tools:context=".RegActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textview1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="51dp"
                    android:fontFamily="@font/lobster"
                    android:text="Daily Data"
                    android:textAlignment="center"
                    android:textColor="#009B85"
                    android:textSize="36dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/count1"
                    android:layout_width="206dp"
                    android:layout_height="51dp"
                    android:layout_below="@+id/textview1"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="42dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="41dp"
                    android:layout_marginEnd="163dp"
                    android:background="@drawable/button_boarder"
                    android:drawableLeft="@mipmap/pushup1_foreground"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/source"
                    android:inputType="number|numberDecimal"
                    android:padding="8dp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/Count2"
                    android:layout_width="320dp"
                    android:layout_height="51dp"
                    android:layout_below="@+id/count1"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="47dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="44dp"
                    android:background="@drawable/button_boarder"
                    android:drawableLeft="@mipmap/side_plank_foreground"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/source"
                    android:hint="Side-Plank (30 Sec)"
                    android:inputType="number|numberDecimal"
                    android:padding="8dp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/Count3"
                    android:layout_width="320dp"
                    android:layout_height="51dp"
                    android:layout_below="@+id/Count2"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="47dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="44dp"
                    android:background="@drawable/button_boarder"
                    android:drawableLeft="@mipmap/crunches_foreground"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/source"
                    android:hint="Crunches (5 Reps)"
                    android:inputType="number|numberDecimal"
                    android:padding="8dp"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/Count4"
                    android:layout_width="320dp"
                    android:layout_height="51dp"
                    android:layout_below="@+id/Count3"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="47dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="44dp"
                    android:background="@drawable/button_boarder"
                    android:drawableLeft="@mipmap/supermans_foreground"
                    android:drawablePadding="0dp"
                    android:fontFamily="@font/source"
                    android:hint="Supermans (5 Reps)"
                    android:inputType="number|numberDecimal"
                    android:padding="8dp"
                    android:scaleType="fitStart"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/Count5"
                    android:layout_width="320dp"
                    android:layout_height="51dp"
                    android:layout_below="@+id/Count4"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="47dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="44dp"
                    android:background="@drawable/button_boarder"
                    android:drawableLeft="@mipmap/jumping_jack_foreground"
                    android:drawablePadding="8dp"
                    android:fontFamily="@font/source"
                    android:hint="Jumping jack (10 Reps)"
                    android:inputType="numberDecimal"
                    android:padding="8dp"
                    android:textColor="@color/black" />

                <!--        <Button-->
                <!--            android:text="Sign Up"-->
                <!--            android:fontFamily="@font/roboto"-->
                <!--            android:id="@+id/signup_button"-->
                <!--            android:layout_width="130dp"-->
                <!--            android:layout_height="51dp"-->
                <!--            android:layout_below="@+id/signup_weight"-->
                <!--            android:layout_marginStart="120dp"-->
                <!--            android:layout_marginLeft="30dp"-->
                <!--            android:layout_marginTop="13dp"-->
